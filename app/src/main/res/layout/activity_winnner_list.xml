<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"
    android:orientation="vertical">

    <include layout="@layout/pub_layout_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_30">

            <TextView
                android:id="@+id/txt_winnerListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXX"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动中奖人名单"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_winnerListStatement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="X个奖品"
            android:textSize="@dimen/sp_16" />

        <com.poomoo.ohmygod.view.custom.RefreshLayout
            android:id="@+id/refresh_winnerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/list_winner"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.poomoo.ohmygod.view.custom.RefreshLayout>
    </LinearLayout>
</LinearLayout>