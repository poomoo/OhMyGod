<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_list_win_information_imageView_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/test123" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/item_list_win_information_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_8"
            android:text="悉尼豪华别墅"
            android:textColor="@color/themeRed"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖用户 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_win_information_textView_winner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某 "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖时间 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_win_information_textView_win_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年8月4日"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取地点 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_win_information_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观山湖区世纪城"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取截止日期 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_win_information_textView_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年8月5日-2015年8月10日"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dashed_line"
        android:layerType="software" />

    <TextView
        android:id="@+id/item_list_win_information_textView_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_8"
        android:text="因某某原因，某某将此奖品转让给某某"
        android:textColor="@color/themeGray"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/divider" />
</LinearLayout>