<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/img_message_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/dp_10"
            android:src="@drawable/picture"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxEms="8"
                    android:singleLine="true"
                    android:text="系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息系统消息"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/img_inStationMessageStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_message_title"
                    android:src="@drawable/ic_inform_count" />

                <TextView
                    android:id="@+id/txt_message_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2015-9-20 11:32:32"
                    android:textColor="@color/themeGray"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息系统消息系统消息系统消息系统消息"
                android:textColor="@color/themeGray"
                android:textSize="16sp"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>