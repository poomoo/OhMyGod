<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_list_winning_record_imageView_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_no" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/item_list_winning_record_textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_8"
            android:text="悉尼豪华别墅"
            android:textColor="@color/themeRed"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖时间 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_winning_record_textView_win_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年8月4日"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取地点 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_winning_record_textView_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="观山湖区世纪城"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领取截止日期 : "
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/item_list_winning_record_textView_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年8月5日-2015年8月10日"
                android:textColor="@color/themeGray"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>