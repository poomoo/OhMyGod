<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="mySeekBar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_style</item>
        <item name="android:thumb">@drawable/ic_progressbar_normal</item>
        <item name="android:thumbOffset">0dip</item>
    </style>

    <style name="myProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progressbar_style</item>
    </style>

    <style name="myProgressBarCircle">
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
    </style>

    <style name="myButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_grab_button_open_activity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titlebar" parent="@android:style/Theme.Dialog">
        <item name="android:layout">@layout/dialog_alarm_alert_title</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_style</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
</resources>
